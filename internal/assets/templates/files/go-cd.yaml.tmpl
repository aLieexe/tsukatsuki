name: CD
on:
  push:
    branches: 
      - main
  pull_request:
    branches:
      - main


jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
    - name: checkout
      uses: actions/checkout@v3
     
    {{- if .IPv6}} 
    - name: Set up WARP
      uses: fscarmen/warp-on-actions@v1.4
      with:
        stack: dual
    {{- end}}

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v3

    - name: Build image as tar
      uses: docker/build-push-action@v6
      with:
        context: .
        file: ./{{ .OutputDir }}/conf/Dockerfile
        tags: {{ .ProjectName }}:latest
        outputs: type=docker,dest=./app.tar

    - name: Copy tar to server
      uses: appleboy/scp-action@v1.0.0
      with:
        host: {{" ${{ secrets.SSH_IP }}" }}
        username: {{" ${{ secrets.SSH_USER }}" }}
        key: {{" ${{ secrets.SSH_KEY }}" }}
        port: {{" ${{ secrets.SSH_PORT }}" }}
        {{- if .IPv6}} 
        protocol: tcp6
        {{- end}}
        source: "app.tar"
        target: "{{ .RemotePath }}"

    - name: the deployment
      timeout-minutes: 10
      uses: appleboy/ssh-action@v1.2.0
      with:
        host: {{" ${{ secrets.SSH_IP }}" }}
        username: {{" ${{ secrets.SSH_USER }}" }}
        key: {{" ${{ secrets.SSH_KEY }}" }}
        port: {{" ${{ secrets.SSH_PORT }}" }}
        {{- if .IPv6}} 
        protocol: tcp6
        {{- end}}
        script: |
          cd {{ .RemotePath }}
          git pull || true
          docker load -i app.tar
          cd {{ .OutputDir }}/conf
          docker compose up -d